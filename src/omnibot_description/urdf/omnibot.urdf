<!-- Tue 29 Dec 2020 21:35:37 IST -->

<robot name="omnibot">

    <!--Materials color predefined-->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0 0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="red">
    <color rgba="1.0 0 0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <link name="base_footprint">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.035" radius="0.08"/>
      </geometry>
    </visual>
  </link>



    <!-- TODO: To Xacro -->
    <link name="right_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.012"/>
            <geometry>
                <cylinder radius="0.029" length="0.026"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.012"/>
            <geometry>
                <cylinder radius="0.029" length="0.026"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <link name="back_wheel">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.012"/>
            <geometry>
                <cylinder radius="0.029" length="0.026"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <joint name="base_foorprint_to_base_link" type="fixed">
        <origin xyz="0 0 0.041"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>


    <joint name="base_link_to_right_wheel" type="continuous">
        <origin rpy="1.5707963 0 -1.0471976" xyz="0.069282 0.040 -0.020"/>
        <axis xyz="0 0 1 "/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
    </joint>

    <joint name="base_link_to_left_wheel" type="continuous">
        <origin rpy="1.5707963 0 1.0471976" xyz="-0.069282 0.040 -0.020"/>
        <axis xyz="0 0 1"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
    </joint>

    <joint name="base_link_to_back_wheel" type="continuous">
        <origin rpy="-1.5707963 0 0" xyz="0.0 -0.08 -0.02"/>
        <axis xyz="0 0 1"/>
        <parent link="base_link"/>
        <child link="back_wheel"/>
    </joint>

</robot>
